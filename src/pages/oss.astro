  <HorizontalCard
    title="Polaris ViewComponents"
    img="/github.webp"
    url="https://github.com/baoagency/polaris_view_components"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="Polaris Components"
    img="/github.webp"
    url="https://github.com/RAAbbott/polaris-components"
  />
