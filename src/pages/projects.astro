---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
---

<BaseLayout title = "Projects" sideBarActiveItemID="projects">
  <div>
    <div class="text-3xl w-full font-bold mb-5">Projects</div>
  </div>

  <HorizontalCard
    title="Ultimate Order Split(unlisted)"
    img="/shopify.webp"
    desc="Splits Shopify orders and automate fulfillment workflows."
    url="#"
    badge="Shopify App"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="Anyfication"
    img="/shopify.webp"
    desc="Send Store Notifications to Slack, Discord and E-mail!"
    url="https://apps.shopify.com/anyfication"
    badge="Shopify App"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="Horse Inventory Management"
    img="/shopify.webp"
    desc="Magical Real-Time AI Inventory Management, 1-Minute PO Automation & Multi-Store Sync"
    url="https://apps.shopify.com/horse"
    badge="Shopify App"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="Lighthouse: Slack Alerts"
    img="/shopify.webp"
    desc="Get Slack alerts for your most important orders. Filter them by order value and much more."
    url="https://apps.shopify.com/lighthouse-smart-slack-alerts"
    badge="Shopify App"
  />
</BaseLayout>
